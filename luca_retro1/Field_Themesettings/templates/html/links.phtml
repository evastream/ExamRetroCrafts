        <div class="action toggle switcher-trigger" id="header-links-trigger<?php echo $id?>">
            <i class="fa fa-cog"> </i> <strong class="hidden-xs"><?php echo __('Setting') ?> </strong>
        </div>
        
        <ul class="dropdown header-links-dropdown"
         data-mage-init='{"dropdownDialog":{
