<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::menu_elements" title="Field Menu">
                    <resource id="Field_Megamenu::menu" title="Menu" sortOrder="10">
                        <resource id="Field_Megamenu::menu_edit" title="Edit Menu" sortOrder="10" />
                        <resource id="Field_Megamenu::menu_save" title="Save Menu" sortOrder="20" />
                        <resource id="Field_Megamenu::menu_delete" title="Delete Menu" sortOrder="30" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Field_Megamenu::config_menu" title="Menu" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>