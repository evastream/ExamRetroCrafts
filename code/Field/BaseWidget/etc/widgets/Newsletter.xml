<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
	<widget id="field_base_newsletter" class="Field\BaseWidget\Block\Widget\Newsletter">
		<label translate="true">Field Base: Newsletter Widget</label>
		<description translate="true">Create Magento Newsletter Widget</description>
		<parameters>
			<parameter name="title" xsi:type="text" visible="true">
				<label translate="true">Widget Title</label>
				<description translate="true">This tile will be showed as header of widget block. Empty to disable</description>
			</parameter>
			
			<parameter name="enable_collapse" xsi:type="select"  visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
				<label translate="true">Enable Collapse</label>
			</parameter>

			<parameter name="title_class" xsi:type="text"  visible="true">
				<label translate="true">Title Class</label>
			</parameter>

			<parameter name="signup_text" xsi:type="text"  visible="true">
				<label translate="true">Signup Text</label>
				<description translate="true">For example: Signup</description>
			</parameter>

			<parameter name="button_text" xsi:type="text"  visible="true">
				<label translate="true">Button Text</label>
				<description translate="true">For example: Submit</description>
			</parameter>

			<parameter name="button_class" xsi:type="text"  visible="true">
				<label translate="true">Button Classes</label>
			</parameter>

			<parameter name="input_class" xsi:type="text"  visible="true">
				<label translate="true">Input Classes</label>
			</parameter>

			<parameter name="addition_cls" xsi:type="text"  visible="true">
				<label translate="true">Addition Classes</label>
			</parameter>

			<parameter name="template" xsi:type="text"  visible="true">
				<label translate="true">Input custom template</label>
				<description translate="true">For example: Field_BaseWidget::widget/newsletter.phtml .Empty for default</description>
			</parameter>
		</parameters>
	</widget>
</widgets>