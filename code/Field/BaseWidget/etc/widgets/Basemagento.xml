<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">

    <widget id="field_basewidget_basemagento" class="Field\BaseWidget\Block\Widget\Basemagento">
        <label translate="true">Field Base: Core Magento Blocks</label>
        <description>Generate Magento Blocks: top.links, wishlist_sidebar, form.subscribe, top.search, catalog.compare.sidebar, footer_links, copyright, category.products</description>
        <parameters>
            <parameter name="block_name" xsi:type="select"  visible="true" source_model="Field\BaseWidget\Model\Source\ListCoreBlocks">
                <label translate="true">Block Name</label>
                <description translate="true">Choose a block to render.</description>
            </parameter>
            <parameter name="custom_block_name" xsi:type="text" visible="true">
                <label translate="true">Or Input Block Name</label>
                <description translate="true">Input a block name to render.</description>
            </parameter>
            <parameter name="custom_template" xsi:type="text" visible="true">
                <label translate="true">Custom Template</label>
                <description translate="true">Load Custom Template For The Block. For example: html/topmenu.phtml Empty for default.</description>
            </parameter>
        </parameters>
    </widget>
</widgets>