<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">

    <widget id="field_basewidget_pinterest" class="Field\BaseWidget\Block\Widget\Pinterest">
        <label translate="true">Field Base: Pinterest</label>
        <description>Show Pinterest</description>
        <parameters>
            <parameter name="title" xsi:type="text" visible="true">
                <label translate="true">Widget Title</label>
                <description translate="true">This tile will be showed as header of widget block. Empty to disable</description>
            </parameter>

            <parameter name="select_type" xsi:type="select"  visible="true">
                <label translate="true">Couting type</label>
                <description translate="true">Select Couting type.</description>
                <options>
                    <option name="above" value="above">
                        <label translate="true">Above the Button</label>
                    </option>
                    <option name="beside" value="beside">
                        <label translate="true">Beside the Button</label>
                    </option>
                    <option name="none" value="none" selected="true">
                        <label translate="true">Not Shown</label>
                    </option>
                </options>
            </parameter>

            <parameter name="button_type" xsi:type="select"  visible="true">
                <label translate="true">Pin button type</label>
                <description translate="true">Pin button type.</description>
                <options>
                    <option name="small" value="small" selected="true">
                        <label translate="true">Small</label>
                    </option>
                    <option name="large" value="large">
                        <label translate="true">Large</label>
                    </option>
                    <option name="round" value="round">
                        <label translate="true">Round</label>
                    </option>
                </options>
            </parameter>

            <parameter name="color" xsi:type="select"  visible="true">
                <label translate="true">Button Color</label>
                <options>
                    <option name="red" value="red">
                        <label translate="true">Red</label>
                    </option>
                    <option name="gray" value="gray" selected="true">
                        <label translate="true">Gray</label>
                    </option>
                    <option name="white" value="white">
                        <label translate="true">White</label>
                    </option>
                </options>
            </parameter>

            <parameter name="url" xsi:type="text"  visible="true">
                <label translate="true">Url</label>
            </parameter>

            <parameter name="media" xsi:type="text"  visible="true">
                <label translate="true">Image Preview</label>
                <description translate="true">Input image url. For example: http://website_url/images/image-name.jpg</description>
            </parameter>

            <parameter name="description" xsi:type="text"  visible="true">
                <label translate="true">Description</label>
            </parameter>

        </parameters>
    </widget>
</widgets>