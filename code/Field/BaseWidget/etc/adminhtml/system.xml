<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Config/etc/system_file.xsd">
	<system>
		<tab id="fieldpagebuildertab" translate="label" sortOrder="400">
			<label>Field Pages Builder</label>
		</tab>
		<section id="fieldbasewidget" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
			<class>separator-top</class>
			<label>Base Widgets</label>
			<tab>fieldpagebuildertab</tab>
			<resource>Field_BaseWidget::config_basewidget</resource>
			<group id="general" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>General Settings</label>
				
				<field id="show" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Enabled</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>

				<field id="root_media" translate="label comment" type="text" sortOrder="24" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Root Media Path</label>
					<comment>Input root media folder path of filemanager popup in pages builder ( media/FOLDER_PATH ). Input FOLDER_PATH . For example folder name: wysiwyg . The filemanager will get images from media/wysiwyg . Default empty value</comment>
				</field>

				<field id="enable_swiper" translate="label comment" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Enabled Swiper Carousel</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>

				<field id="enable_cookie_jquery" translate="label comment" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Enabled Cookie Jquery</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>

				<field id="enable_countdown" translate="label comment" type="select" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Enabled Countdown Js</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>

			</group>
		</section>
	</system>
</config>